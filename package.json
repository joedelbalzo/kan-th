{
  "name": "Vali",
  "version": "1.0.0",
  "description": "root folder for Vali",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "install-root": "npm install",
    "install-frontend": "cd frontend && npm install",
    "install-backend": "cd backend && npm install",
    "build-frontend": "cd frontend && npm run build",
    "build": "concurrently \"npm run install-root\" \"npm run install-frontend\" \"npm run install-backend\"",
    "start-frontend": "cd frontend && npm run dev",
    "start-backend": "cd backend && npm run start:dev",
    "start": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "start:prod": "NODE_OPTIONS=--max_old_space_size=512 npm run build-frontend && cd backend && npm start",
    "build:prod": "npm run install-root && npm run install-frontend && npm run install-backend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "vite": "^4.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
